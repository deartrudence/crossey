<!DOCTYPE html>
<html>
<head>
  <title>Crossey</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<p class="notice"><%= notice %></p>
	<p class="alert"><%= alert %></p>
	<ul>
		<li><%= link_to 'All Reviews',individual_reviews_path %> </li>
		<li><%= link_to 'Start/Find Review', new_individual_review_path %></li>
		<li><%= link_to 'All Reviews Types',reviews_path %> </li>
		<% if current_user.present? %>
			<% if current_user.profile.present? %>
				<li><%= link_to "Profile", edit_profile_path(current_user.profile) %></li>
			<% end %>
			<li><%= link_to "Logout", destroy_user_session_path, method: :delete  %></li>
		<% end %>
	</ul>

<%= yield %>

</body>
</html>
