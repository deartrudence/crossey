<p id="notice"><%= notice %></p>

<ol class="breadcrumb">
  <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
  <li><a href="#">Layout</a></li>
  <li class="active">Fixed</li>
</ol>
<section class="content-header">
  <div class="callout callout-warning">
    <h1>
      Listing Employee Reviews
      <small>Blank example to the fixed layout</small>
    </h1>
    
  </div>
</section>

<section class="content">
  <div class="box box-primary">
    <div class="box-header with-border">
      <h4 class="box-title">My Reviews</h4>
      <div class="box-tools pull-right">
        <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
          <i class="fa fa-minus"></i></button>
      </div> 
    </div> 
    <div class="box-body">
      <%= @me.profile.name %>
      <%= link_to 'Reviews', @me.profile, class:"btn btn-flat btn-primary pull-right" %>
    </div> 
  </div>

  <div class="box box-primary">
    <div class="box-header with-border">
      <h4 class="box-title">People I have Reviewed</h4>
      <div class="box-tools pull-right">
        <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
          <i class="fa fa-minus"></i></button>
      </div>
      </div>
    <% if @users.present? %>
        <% @users.each do |user| %>
          <div class="box-body">
            <%= user.profile.name %>
            <%= link_to 'Reviews', user.profile, class: 'btn btn-flat btn-primary pull-right' %>
          </div>
        <% end %>
    <% end %>    
  </div>

  <div class="box box-primary">
    <div class="box-header with-border">
      <h4 class="box-title">People I am Principal of</h4>
      <div class="box-tools pull-right">
        <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
          <i class="fa fa-minus"></i></button>
      </div>
    </div>
    <% if @underlings.present? %>
        <% @underlings.each do |user| %>
          <div class="box-body">
            <%= user.profile.name %>
            <%= link_to 'Reviews', user.profile, class: 'btn btn-flat btn-primary pull-right' %>
          </div>
        <% end %>
    <% end %>    
  </div>
  
</section>


