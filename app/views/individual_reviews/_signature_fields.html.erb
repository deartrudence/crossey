<div class="row">
	
	<div class="col-md-12">
		
		<div class="box">
			<div class="box-header">
				<h3><%= f.object.signature_type %> Signature</h3>
			</div>
			<div class="box-body">
				<div class="row">
					<div class="field form-group col-md-9">
					  <%= f.label :name %><br>
					  <%= f.text_field :name, class: 'form-control' %>
					</div>
				</div>
				<div class="row">
					<div class="field form-group col-md-1">
					  <%= f.label :signed %><br>
					  <%= f.check_box :signed %>
					</div>
					<div class="field form-group col-md-6">
					  <%= f.label :date %><br>
					  <div class="input-group date">
					    <div class="input-group-addon">
					        <i class="fa fa-calendar"></i>
					    </div>
					    <%= f.text_field :date, class: 'form-control datepicker' %>
						</div>
					</div>	
				</div>
			</div>
		</div>
	</div>
</div>

