<section class="content-header">
  <div class="text-center">
    <h1 class="page-title">Listing Users</h1>
  </div>
</section>

<section class="content">
  <div class="box">
    <div class="box-body">    
      <div class="table-responsive"> 
        <table class="table table-hover">
          <thead>
            <tr>
              <th>User</th>
              <th>Job title</th>
              <th>Job type</th>
              <th colspan="2"></th>
            </tr>
          </thead>

          <tbody>
            <% @profiles.each do |profile| %>
              <tr>
                <td><%= profile.name %></td>
                <td>
                  <% if profile.custom_job_title.present? %>
                    <%= profile.custom_job_title%>
                  <% else %>
                    <%= profile.job_title.upcase %>
                  <% end%>
                </td>
                <td><%= profile.job_type %></td>
                <td><%= link_to 'Show', profile, class: "btn btn-flat btn-primary form-control" %></td>
                <td><%= link_to 'Edit', edit_profile_path(profile), class: "btn btn-flat btn-info form-control" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>  
  </div>
  
</section>

<br>

